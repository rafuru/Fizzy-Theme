{{!-- single tag page --}}

{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{!-- tag meta --}}
{{#tag}}
{{#if feature_image}}
<section class="hero tag-list-header is-bold bg-cover-center" style="background-image:url({{feature_image}});">
{{else}}
<section class="hero tag-list-header is-bold bg-cover-center" style="background-image: linear-gradient(to bottom right, #acffc5, #078ddb);">
{{/if}}
  <div class="hero-body has-dark-modal is-montserrat">
    <div class="container has-text-centered">
        <h1 class="title is-spaced is-uppercase has-text-white has-padding-1">
            <span class="round-border-6 has-darker-modal">
                {{name}}
            </span>
        </h1>
        <h2 class="subtitle has-text-white">
            {{plural ../pagination.total empty='No posts' singular='% post' plural='% posts'}}
        </h2>
        <div class="has-text-white is-centered is-margin-auto" style="max-width:760px;">
            {{#if description}}
                {{description}}
            {{/if}}
        </div>
    </div>
  </div>
</section>
{{/tag}}

{{!-- main --}}
<main class="section">
    <div class="columns">
        <div class="column is-2-widescreen is-1-desktop is-hidden-touch"></div>
        <div class="column is-8-widescreen is-10-desktop is-12-tablet">
            {{#foreach posts}}
            
                {{!-- exclude #noindex --}}
                {{#has tag="#noindex"}}
                    {{!-- nothing --}}
                {{else}}
                    {{> post_item}}
                {{/has}}

                {{!-- inject ads for every 3 items --}}
                {{#has number="nth:3"}} 
                    {{!-- {{> "something"}} --}}
                {{/has}}

            {{else}}
                There is no post yet.
            {{/foreach}}
        </div>
        <div class="column is-hidden-touch"></div>
    </div>
</main>

{{!-- pagination --}}
<section class="section is-padding-top-05">
    <div class="container">
        {{pagination}}
    </div>
</section>

